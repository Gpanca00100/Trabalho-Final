{
  "compilerOptions": {
    "types": ["node"],

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",

    "esModuleInterop": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  }
}
